#include<stdio.h>
int main()
{
	int size=0;
	printf("Enter size of arrays : ");
	scanf("%d",&size);
	int arr[size];
	printf("\n Enter %d value in Arrays \n");
	int i=0;
	for(i=0;i<size;i++)
	{
		scanf("%d",arr+i);
	}
	printf("\n Entred Value is \n");
	for(i=0;i<size;i++)
	printf("%d ",*(arr+i));
return 0;	
}
